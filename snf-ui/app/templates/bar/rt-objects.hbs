{{#if canCreate}}
    <li>
        <a id='create-dir' {{action 'showDialog' 'create-dir' controller}}>
            {{fa-icon "fa-folder"}}
            <label>{{t 'icon_label.create_dir'}}</label>
        </a>
    </li>
{{/if}}

{{#if canRestore}}
    <li class={{unless hasSelected 'disabled'}}>
        <a {{action 'openRestore'}}>
            {{fa-icon "fa-reply"}}
            <label>{{t 'icon_label.restore_from_trash'}}</label>
        </a>
    </li>
{{/if}}

{{#if canMove}}
    <li class={{unless hasSelected 'disabled'}}>
        <a {{action 'openCut'}}>
            {{fa-icon "fa-share"}}
            <label>{{t 'icon_label.move'}}</label>
        </a>
    </li>
{{/if}}

{{#if canCopy}}
    <li class={{unless hasSelected 'disabled'}}>
        <a {{action 'openCopy'}}>
            {{fa-icon "fa-copy"}}
            <label>{{t 'icon_label.copy'}}</label>
        </a>
    </li>
{{/if}}

{{#if canTrash}}
    <li class={{unless hasSelected 'disabled'}}>
        <a {{action 'moveObjectsToTrash'}}>
            {{fa-icon "fa-trash"}}
            <label>{{t 'icon_label.move_to_trash'}}</label>
        </a>
    </li>
{{/if}}

{{#if canDelete}}
    <li class={{unless hasSelected 'disabled'}}>
        <a {{action 'openDelete'}}>
            {{fa-icon "fa-remove"}}
            <label>{{t 'icon_label.delete'}}</label>
        </a>
    </li>
{{/if}}


<li class="show-for-medium-up">{{partial "items/sort-select"}}</li>
<li>{{partial "global/refresh"}}</li>
